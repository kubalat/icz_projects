@{
    Layout = "_Login";
}

<form asp-controller="Login" asp-action="Login" method="post">
    <div class="row">
        <div class="col-12 d-flex justify-content-center align-items-center">
            <div class="card shadow border-0 w-50">
                <div class="card-header">
                    <h2>ICZ Login</h2> 
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <label for="password">Password</label>
                            <input id="password" name="password" type="password" />
                        </div>
                        <div class="col-3">
                            <button class="btn btn-sm btn-primary" type="submit">Log me in</button>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>


</form>
